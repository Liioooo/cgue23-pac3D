{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../bin/CgEngine_Solution/DebugLinux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_FLAGS_INIT": "-Og -g3 -Wall -Wno-unknown-pragmas",
                "CMAKE_CXX_FLAGS_INIT": "-Og -g3 -std=c++17 -Wall -Wno-unknown-pragmas"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../bin/CgEngine_Solution/ReleaseLinux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_FLAGS_INIT": "-O2 -g0 -Wall -Wno-unknown-pragmas",
                "CMAKE_CXX_FLAGS_INIT": "-O2 -g0 -std=c++17 -Wall -Wno-unknown-pragmas"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../bin/CgEngine_Solution/Debug",
            "vendor": {
                "jetbrains.com/clion": {
                    "toolchain": "Visual Studio 22"
                }
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_FLAGS_INIT": "/Od /W3 /sdl /ZI",
                "CMAKE_CXX_FLAGS_INIT": "/Od /std:c++17 /W3 /sdl /ZI"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../bin/CgEngine_Solution/Release",
            "vendor": {
                "jetbrains.com/clion": {
                    "toolchain": "Visual Studio 22"
                }
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_FLAGS_INIT": "/GL /O2 /W3 /sdl",
                "CMAKE_CXX_FLAGS_INIT": "/GL /O2 /std:c++17 /W3 /sdl"
            }
        }
    ]
}
