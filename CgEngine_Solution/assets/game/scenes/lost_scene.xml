<Scene>
    <Entity id="camera">
        <Components>
            <TransformComponent position="0 10 0" rotation="0 0 0" scale="1 1 1" />
            <CameraComponent primary="true" projection="perspective" near="0.1" far="500" fov="80" />
        </Components>
    </Entity>
    <Entity id="canvas">
        <Components>
            <TransformComponent position="0 0 0" rotation="0 0 0" scale="1 1 1" />
            <ScriptComponent script-name="lostScript" />
            <UiCanvasComponent>
                <UiText id="lost" left="50vw" top="30vh" y-align="center" x-align="center" font="SpaceMono-Bold.ttf" size="100" text="You Lost" color="1 1 1 1" />

                <UiRect id="againButton" left="50vw" top="50vh" width="400" height="100" fill-color="1 1 1 1" y-align="center" x-align="center" z-index="0" />
                <UiText id="againText" left="50vw" top="50vh" y-align="center" x-align="center" font="SpaceMono-Bold.ttf" size="55" text="Play Again" color="0 0 0 1" z-index="1" />

                <UiRect id="exitButton" left="50vw" top="80vh" width="300" height="80" fill-color="1 1 1 1" y-align="center" x-align="center" z-index="0" />
                <UiText id="exitText" left="50vw" top="80vh" y-align="center" x-align="center" font="SpaceMono-Bold.ttf" size="45" text="Exit Game" color="0 0 0 1" z-index="1" />
            </UiCanvasComponent>
        </Components>
    </Entity>
</Scene>